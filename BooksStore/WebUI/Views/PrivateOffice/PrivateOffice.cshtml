@model Domain.Entities.User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrivateOffice</title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div>
        <br />
        <br />
        <br />
        <div class="container">
            <div class="row">
                <div>
                    @*Книга1*@
                    <div class="col-sm-2 col-md-2">
                        <img src="~/Img/24.jpg" width="650" height="430"
                             alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <blockquote>
                            @if (this.User.Identity.IsAuthenticated)
                            {
                                <cite title=" "> Email: @this.User.Identity.Name</cite>
                                <p><h5>✐ Name: </h5></p>
                                <p><h5>✐ Password: </h5></p>
                                <p><h5>✐ Age: </h5></p>
                            }
                            else
                            {
                                <p>Вы не авторизированы </p>
                            }
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
