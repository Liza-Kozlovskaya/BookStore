@using WebUI.Models
@model BooksListViewModel

@{
    ViewBag.Title = "Книги";
}


    @*баннер магазина*@
@*<img id="logo" src="~/Img/3.jpg" alt=" " />*@

@*переадресация по картинке на вход*@
<a href="@Url.Action("Login","Account")">
    <img id="logo" src="~/Img/4.png" alt=" " />
</a>


@foreach (var book in Model.Books)
{
    @Html.Partial("_BookSummary", book)
}


<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, genre = Model.CurrentGenre }))
</div>
